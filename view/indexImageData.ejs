<%- include("template/header"); %>
<style>
  
    button.btn-outline-success, button.btn-outline-danger {
        width: 43px;
        height: 43px
    }

    .uploaded-image {
        max-width: 1000px;
        max-height: 200px;
    }
    
    .alert {
        margin-top: 1rem;
    }

    .footer {
        margin-top: 20px;
        margin-bottom: 10px;
    }

    .footer-line {
        border-top: 1px solid rgba(0,0,0, 0.3);
    }

</style>
<div class="container">
    <form action="" method="POST">
        <p>Inserisci la luminosità</p>
        <input type="number" name="brigImage" min=0 max=100 required>

        <p>Selezionare velocità di scorrimento</p>

        <input type="radio" name="speedImage" value="max">Velocità massima<br>
        <input type="radio" name="speedImage" value="medium" checked>Velocità media<br>
        <input type="radio" name="speedImage" value="min">Velocità bassa<br>

        <input type="checkbox" name="selectClock">Aggiungere data e ora alla fine?<br>

        <div style="display: inline-flex; margin: auto; margin-top: 3px">
            <span>Inserire 0 e 0 per far scorrere all'infinito</span>
            <div style="display: inline-flex;">
                <input type="text" name="hours" required>
                <span>Ore</span>
            </div>
            <p style="margin: auto; margin-left: 15px; margin-right: 15px">:</p>
            <div style="display: inline-flex;">
                <input type="text" name="minutes" required>
                <span>Minuti</span>
            </div>
        </div>

        <button style="display: block; margin: auto; margin-top: 10px" class="btn btn-outline-primary" type="submit">
            Aggiorna
        </button>
    </form>
        <form action="/delete" method="POST">
                <h3> Lista immagini attualmente caricate </h3>
                <div class="container">

                    <% if(imageList.length > 0) { %>
                        <% imageList.forEach( function (element) { %>
                            <div class="alert alert-info">
                                <h4 class="alert-heading"><%= element.name%></h4>
                                <hr>
                                <div class="d-flex flex-row" style="margin-bottom: 20px;">
                                    <button type="submit" style="margin-left: 20px; margin-right: 20px; border-radius: 30px;" name="remove" value="<%= element.name %>" class="btn btn-outline-danger">
                                        <i class="fas fa-times"></i>
                                    </button>
                                    
                                    <img class="uploaded-image"  src="<%= element.imgSrc %>">
                                </div>
                            </div>
                            <button type="submit" name="add" value="0" class="btn btn-outline-success" style="margin: auto; display: block; border-radius: 30px;">
                                <i class="fas fa-plus"></i>
                            </button>

                        <% }) %>
                    <% } else { %>
                        <button type="submit" name="add" value="0" class="btn btn-outline-success"
                            style="margin: auto; display: block; border-radius: 30px;"><i class="fas fa-plus"></i></button>
                    <% } %>
                </div>
        </form>
    </div>
</div>


<%- include("template/footer"); %>